<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.lotus.animationdemo.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_tweened_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="补间动画"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_frame_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="帧动画"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_property_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="属性动画"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorAccent"
            android:text="***动画的综合使用***"
            android:textSize="26sp" />
        <TextView
            android:id="@+id/tv_hidden_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="平铺展开动画"
            android:textSize="26sp" />
        <TextView
            android:id="@+id/tv_drop_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="下拉展开动画"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_anim_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="动画轨迹"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_luncher_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="小球按轨迹运动的动画"
            android:textSize="26sp" />
        <TextView
            android:id="@+id/tv_menu_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="灵动菜单"
            android:textSize="26sp" />
    </LinearLayout>

</ScrollView>
